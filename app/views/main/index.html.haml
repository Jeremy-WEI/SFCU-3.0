#externalURLWarningModal.modal.fade{:role => "dialog"}
  .modal-dialog
    .modal-content
      .modal-header
        %h4.modal-title External URL Warning
      .modal-body
        %p You are being redirected to an external website that is not controlled by the Student Federal Credit Union. We do not endorse and are not responsible for the content of this website.
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Go back
        %a#externalURLContinue.btn.btn-primary{:href => "#", :role => "button"} Continue to external website

:javascript
  $(document).ready(function() {
    $('#externalURLContinue').click(function(e) {
      $('#externalURLWarningModal').modal('hide');
    });

    $('a.external-link').click(function(e) {
      e.preventDefault();

      $('#externalURLContinue').attr('href', $(this).attr('href'));
      $('#externalURLContinue').attr('target', $(this).attr('target'));

      $('#externalURLWarningModal').modal();
    });
  });


